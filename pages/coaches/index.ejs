    <script>
      document.addEventListener("DOMContentLoaded", function () {
        const elementosFecha = document.querySelectorAll("#fechaContainer");

        elementosFecha.forEach((elemento) => {
          // Obtener la fecha actual
          const fechaObjeto = new Date(elemento.innerHTML);

          // Formatear la fecha como desees (por ejemplo, DD/MM/YYYY)
          const dia = String(fechaObjeto.getDate()).padStart(2, "0");
          const mes = String(fechaObjeto.getMonth() + 1).padStart(2, "0");
          const año = fechaObjeto.getFullYear();

          const hora = String(fechaObjeto.getHours()).padStart(2, "0");
          const minuto = String(fechaObjeto.getMinutes()).padStart(2, "0");

          // Crear una cadena con el formato deseado
          const fechaFormateada = `${mes}/${dia}/${año} - ${hora}:${minuto}`;

          // Mostrar la fecha en el elemento HTML
          elemento.textContent = fechaFormateada;
        });
      });
    </script>
    <script>
      function copyToClipboard(text) {
        if (navigator.clipboard) {
          navigator.clipboard.writeText(text).then(
            () => {
              // Success message
              console.log("Copied to clipboard!");
            },
            (error) => {
              // Error handling
              console.error("Error copying to clipboard:", error);
            }
          );
        } else {
          // Fallback for older browsers
          const textElement = document.createElement("textarea");
          textElement.value = text;
          document.body.appendChild(textElement);
          textElement.select();
          document.execCommand("copy");
          document.body.removeChild(textElement);
        }
      }
      function showModal(id) {
        document.getElementById("modal-billid").textContent = "Bill Id: " + id;
        document.getElementById("modal-link").href =
          "https://polonsky.relied.cloud//viewbill/";
        document.getElementById("modal-link").href += id;
        document.getElementById("copyLink").onclick = () =>
          copyToClipboard(document.getElementById("modal-link").href);
        document.getElementById("modal-link").value =
          document.getElementById("modal-link").href;
        document.getElementById("mail").href =
          "mailto:?subject=Link to pay your bill&body=You can pay your Polonsky Tennis Academy bill here: " + document.getElementById("modal-link").href;
        document.getElementById("wpp").href =
          "https://wa.me/?text=You can pay your Polonsky Tennis Academy bill here: " +
          document.getElementById("modal-link").href;

        // Muestra el modal
        $("#myModal").modal("show");
      }

      function closeModal() {
        // Cierra el modal
        $("#myModal").modal("hide");
      }

      function logout() {
