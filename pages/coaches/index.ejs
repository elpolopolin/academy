<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Facturas</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
  <style>
    body {
      margin: 0;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      min-height: 100svh;
      font-size: larger;
    }
    </style>
</head>
<body class="">
  <main>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container-fluid">
        <a class="navbar-brand" href="/">
          <img src="logo.jpg" alt="Logo" width="30" height="30" class="d-inline-block align-top">
          Coach  Area
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link" href="/Account">Account</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/ver-alumnos">My Students</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/register">Register Student</a>
            </li>
            <li class="nav-item">
              <form id="logoutForm" action="/logout" method="post" style="display: none;">
                
              </form>
              <a class="nav-link" href="#" id="logoutLink" onclick="logout()">Log out</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <div class="container mt-4  ">
      <div class="text-center">
        <h1>Your Bills</h1>
      </div>

      <div class="table-responsive">
        <table class="table table-bordered ">
          <thead>
            <tr>
              <th scope="col text-danger">Id</th>
              <th scope="col">Client Name</th>
              <th scope="col">Service Type</th>
              <th scope="col">Class Length</th>
              <th scope="col">Class Price</th>
              <th scope="col">Bill Date</th>
              <th scope="col">Class Date</th>
              <th scope="col">Paid</th>
              <th scope="col"><button type="button" onclick="newbill()"  class="btn btn-primary">New Bill</button></th>
            </tr>
          </thead>
          <tbody>
            <% for (let i = 0; i < coachBills.length; i++) { %>
              <tr>
                <th scope="row"><%= coachBills[i].id %></th>
                <td><%= coachBills[i].clientId %></td>
                <td><%= coachBills[i].type %></td>
                <td><%= coachBills[i].length %> hr</td>
                <td>$<%= coachBills[i].price %></td>
                <td id="fechaContainer"><%= coachBills[i].billDate %></td>
                <td id="fechaContainer"><%= coachBills[i].classDate %></td>
                <td>
                  <% if (coachBills[i].paid === 1) { %>
                    <span class="text-success fw-bold">PAID</span>
                  <% } else { %>
                    <span class="text-danger fw-bold">NOT PAID</span>
                  <% } %>
                </td>
                <td> <button class="btn btn-secondary ">Send Bill</button> </td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
</div>

  </main>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
  <script>
    document.addEventListener("DOMContentLoaded", function() {
      const elementosFecha = document.querySelectorAll('#fechaContainer');
    
      elementosFecha.forEach(elemento => {
        // Obtener la fecha actual
          const fechaObjeto = new Date(elemento.innerHTML);
        
        // Formatear la fecha como desees (por ejemplo, DD/MM/YYYY)
        const dia = String(fechaObjeto.getDate()).padStart(2, '0');
        const mes = String(fechaObjeto.getMonth() + 1).padStart(2, '0');
        const año = fechaObjeto.getFullYear();

        const hora = String(fechaObjeto.getHours()).padStart(2, '0');
        const minuto = String(fechaObjeto.getMinutes()).padStart(2, '0');
      
        // Crear una cadena con el formato deseado
        const fechaFormateada = `${mes}/${dia}/${año} - ${hora}:${minuto}`;
      
        // Mostrar la fecha en el elemento HTML
        elemento.textContent = fechaFormateada;
        
      });
    });
  </script>
  <script>
    function logout() {
      // Simula el envío del formulario de logout
      document.getElementById('logoutForm').submit();
    }

    function newbill() {
            
           // Crear el contenido del modal
        const modalContent = document.createElement('div');
        modalContent.innerHTML = `
       
        <div class="modal fade" id="editModal" tabindex="-1" aria-labelledby="editModalLabel" aria-hidden="true">
    <div id="errorContainer"></div> 
    <div class="modal-dialog justify-content-center">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editModalLabel">New Bill</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form class="needs-validation" id="updateForm">
                    <div class="mb-3">
                        <label for="client" class="form-label">Client</label>
                        <select class="form-select" id="client" aria-label="Client Select" required>
                            <option disabled selected>Select Client</option>
                            <option value="1">Polo</option>
                        </select>
                    </div>
                    
                    <div class="mb-3">
                        <label for="typeSelect" class="form-label">Class Type</label>
                        <select class="form-select form-control" id="typeSelect" aria-label="Type Select" required>
                            <option disabled selected>Select Class Type</option>
                            <option value="Private Class">Private Class</option>
                            <option value="Semi-Private Class">Semi-Private Class</option>
                            <option value="Group Class">Groupal Class</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label for="classLength" class="form-label">Class Length</label>
                        <select class="form-select form-control" id="classLength" aria-label="Class Length Select" required>
                            <option disabled selected>Select Class Length</option>
                            <option value="0.5">00:30hs</option>
                            <option value="1">01:00hs</option>
                            <option value="1.5">01:30hs</option>
                        </select>
                    </div>
                    
                    <div class="mb-3">
                    <label for="message" class="form-label">Message for the client</label>
                    <textarea class="form-control" id="message" rows="2" required></textarea>
                  </div>

                    <div class="mb-3">
                        <div class="hide-inputbtns">
                            <div class="input-group">
                                <label class="form-label"></label>
                                <span class="input-group-text"><i class="fa-solid fa-calendar-days"></i></span>
                                <input class="form-control" type="datetime-local" id="classDate" name="classDate" required/>
                            </div>
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <div class="hide-inputbtns">
                            <div class="input-group">
                                <label class="form-label"></label>
                                <span class="input-group-text"><i class="fa-solid fa-dollar-sign"></i></span>
                                <input class="form-control" type="number" placeholder="10.99" min="0" step="0.01" data-number-to-fixed="2" data-number-stepfactor="100" currency" id="c2" required />
                            </div>
                        </div>
                    </div>
                    
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Save changes</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
        `;
        // Añadir el modal al cuerpo del documento
        document.body.appendChild(modalContent);
        // Mostrar el modal
        const editModal = new bootstrap.Modal(document.getElementById(`editModal`));
        editModal.show();

        document.getElementById('updateForm').addEventListener('submit', function (event) {
    event.preventDefault();
    createBill();
      });
    } 

  

function createBill() {
    // Obtener los valores de los campos del formulario
    const client = document.getElementById('client').value;
    const classType = document.getElementById('typeSelect').value;
    const classLength = document.getElementById('classLength').value;
    const classMessage = document.getElementById('message').value;
    const classDate = document.getElementById('classDate').value;
    const amount = document.getElementById('c2').value;

   fetch("http://localhost:4000/api/newbill", {
            method: "POST",
            headers: {
                "Content-Type": "application/json"
            },
            body: JSON.stringify({
                client,
                classType,
                classLength,
                classMessage,
                classDate,
                amount
            })
        })
        .then(response => response.json())
                    .then(data => {
                        console.log(data);
                        location.reload()
                    })
                    .catch(error => {
                        console.error('Error updating coach:', error);
        });
   
}
  </script>
   <script src="https://kit.fontawesome.com/2e4e857ba3.js" crossorigin="anonymous"></script>
</body>
</html>