<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Facturas</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
  <style>
    body {
      margin: 0;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      min-height: 100svh;
      font-size: larger;
    }
    </style>
</head>
<body class="">
  <main>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container-fluid">
        <a class="navbar-brand" href="/">
          <img src="logo.jpg" alt="Logo" width="30" height="30" class="d-inline-block align-top">
          Coach  Area
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link" href="/Account">Account</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/ver-alumnos">My Students</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/register">Register Student</a>
            </li>
            <li class="nav-item">
              <form id="logoutForm" action="/logout" method="post" style="display: none;">
                
              </form>
              <a class="nav-link" href="#" id="logoutLink" onclick="logout()">Log out</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <div class="container mt-4  ">
      <div class="text-center">
        <h1>Your Bills</h1>
      </div>

      <div class="table-responsive">
        <table class="table table-bordered ">
          <thead>
            <tr>
              <th scope="col text-danger">Id</th>
              <th scope="col">Client Name</th>
              <th scope="col">Service Type</th>
              <th scope="col">Class Length</th>
              <th scope="col">Class Price</th>
              <th scope="col">Bill Date</th>
              <th scope="col">Class Date</th>
              <th scope="col">Paid</th>
              <th scope="col"><button type="button" class="btn btn-primary">New Bill</button></th>
            </tr>
          </thead>
          <tbody>
            <% for (let i = 0; i < coachBills.length; i++) { %>
              <tr>
                <th scope="row"><%= coachBills[i].id %></th>
                <td><%= coachBills[i].clientId %></td>
                <td><%= coachBills[i].type %></td>
                <td><%= coachBills[i].length %> hr</td>
                <td>$<%= coachBills[i].price %></td>
                <td id="fechaContainer"><%= coachBills[i].billDate %></td>
                <td id="fechaContainer"><%= coachBills[i].classDate %></td>
                <td>
                  <% if (coachBills[i].paid === 1) { %>
                    <span class="text-success fw-bold">PAID</span>
                  <% } else { %>
                    <span class="text-danger fw-bold">NOT PAID</span>
                  <% } %>
                </td>
                <td> <button class="btn btn-secondary ">Send Bill</button> </td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
</div>

  </main>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
  <script>
    document.addEventListener("DOMContentLoaded", function() {
      const elementosFecha = document.querySelectorAll('#fechaContainer');
    
      elementosFecha.forEach(elemento => {
        // Obtener la fecha actual
          const fechaObjeto = new Date(elemento.innerHTML);
        
        // Formatear la fecha como desees (por ejemplo, DD/MM/YYYY)
        const dia = String(fechaObjeto.getDate()).padStart(2, '0');
        const mes = String(fechaObjeto.getMonth() + 1).padStart(2, '0');
        const año = fechaObjeto.getFullYear();

        const hora = String(fechaObjeto.getHours()).padStart(2, '0');
        const minuto = String(fechaObjeto.getMinutes()).padStart(2, '0');
      
        // Crear una cadena con el formato deseado
        const fechaFormateada = `${mes}/${dia}/${año} - ${hora}:${minuto}`;
      
        // Mostrar la fecha en el elemento HTML
        elemento.textContent = fechaFormateada;
        console.log(fechaFormateada)
      });
    });
  </script>
  <script>
    function logout() {
      // Simula el envío del formulario de logout
      document.getElementById('logoutForm').submit();
    }

   

  </script>
</body>
</html>