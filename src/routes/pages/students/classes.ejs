<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Students</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
  </head> 
  <style>
     body {
    margin: 0;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    min-height: 100vh;
    font-size: larger;
    background-color: #6495ed;
  }

  .container {
    padding: 20px;
    border-radius: 10px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
  }

  .search-input {
    margin-bottom: 20px;
  }

  .card {
    border: 1px solid #dee2e6;
    border-radius: 10px;
    margin-bottom: 20px;
  }

  .card:hover {
    cursor: pointer;
    border: 1px solid #230fd3;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  }

  .card-body {
    padding: 20px;
  }

  .card-title {
    font-size: 1.5em;
    margin-bottom: 10px;
   
  }

  .card-text {
    color: #6c757d;
  }

  .custom-link {
    text-decoration: none;
    color: inherit;
    cursor: pointer;
  }

  .custom-link:hover {
    text-decoration: underline;
  }

  .rounded-profile {
    width: 80px;
    height: 80px;
    object-fit: cover;
    border-radius: 50%;
  }
  </style>
</head>
<body>
  <main>
    <div id="loadingOverlay" class="overlay bg-black d-none">   </div>
    <div id="loadingSpinner" class="spinner-border spinner-center d-none" role="status">
        <span class="visually-hidden">Loading...</span>
    </div>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/students">
                <img src="../logo.jpg" alt="Logo" width="30" height="30" class="d-inline-block align-top">
                Students Area
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/students/account">Account</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/students/coaches">Coaches</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/students/mybills">My Bills</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/students/classes">Classes</a>
                    </li>
                    <li class="nav-item">
                        <form id="logoutForm" action="/logout" method="post" style="display: none;">  
                        </form>
                        <a class="nav-link" href="#" id="logoutLink" onclick="logout()">Log out</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
   

    <div class="container mt-4">
      <input type="text" id="searchInput" class="form-control search-input" placeholder="Search classes...">
      <div class="row">
        <% for (let i = 0; i < coachClasses.length; i++) { %>
          <div class="col-md-4 mb-4">
              <a href="/students/classes/view/<%= coachClasses[i].id %>" class="custom-link text-decoration-none">
                  <div class="card h-100">
                      <div class="card-header d-flex gap-2">
                          <img src="<%= coachClasses[i].coachProfilePicture %>" class="rounded-profile"  alt="Coach Image">
                          <div class="d-flex align-items-center justify-content-center ">
                              <h5 class="card-title text-center"><%= coachClasses[i].className %></h5>
                          </div>
                      </div>
                      <div class="card-body d-flex flex-column">
                          <b class="text-decoration-underline"><%= coachClasses[i].coachUsername %></b>
                          <p class="card-text">Description: <%= coachClasses[i].description %></p>
                          <p class="card-text">Level: <%= coachClasses[i].level %></p>
                          <p class="card-text">Capacity: <%= coachClasses[i].attending %> / <%= coachClasses[i].capacity %></p>
                          <div class="class-days d-flex flex-wrap gap-2">
                              <% const classDays = coachClasses[i].classDays ? coachClasses[i].classDays.split(',') : [] %>
                              <% for (let j = 0; j < classDays.length; j++) { %>
                                  <div class="day-badge bg-primary p-1 text-white">
                                      <%= classDays[j] %>
                                  </div>
                              <% } %>
                          </div>
                      </div>
                  </div>
              </a>
          </div>
      <% } %>
       
      </div>
  </div>
  </main>


  <script src="https://kit.fontawesome.com/2e4e857ba3.js" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
  <script>
  function logout() {
    // Simula el envÃ­o del formulario de logout
    document.getElementById('logoutForm').submit();
  }

  document.getElementById('searchInput').addEventListener('input', function () {
  const searchValue = this.value.toLowerCase();
  const cards = document.querySelectorAll('.card');
  cards.forEach(card => {
    const classNameElement = card.querySelector('.card-title');
    const descriptionElement = card.querySelector('.card-text');

    const className = classNameElement.textContent.toLowerCase();
    const description = descriptionElement.textContent.toLowerCase();

    const shouldDisplay = className.includes(searchValue) || description.includes(searchValue);
    card.style.display = shouldDisplay ? 'block' : 'none';
  });
});
</script>
</body>
</html>